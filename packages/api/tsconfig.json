{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"],
      "@config/*": ["config/*"],
      "@/*": ["src/*"]
    },
    "typeRoots": [
      "node_modules/@types",
      "index.d.ts"
    ],
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    // "strictBindCallApply": true,
    "lib": [
      "es6"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
